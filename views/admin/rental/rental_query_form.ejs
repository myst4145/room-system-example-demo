<div class="my-1">
  <div class="row">
    <div class="col-md-2">
      <div class="input-group my-1">
        <select class="form-control custom-select" id="findRentalTypeByStatus">
          <option value="" selected>สถานะ</option>
          <option value="all">ทั้งหมด</option>
          <option value="progress">รอเข้าพัก</option>
          <option value="checkout">ออกแล้ว</option>
          <option value="checkin">พักอยู่</option>
        </select>
      </div>
    </div>

    <div class="col-md-4">
      <div class="input-group my-1">
        <div class="input-group-prepend">
          <button class="input-group-text btn bg-gradient-light" onclick="pasteData($('#findDataByBookingId'))">
            <i class="fa-solid fa-paste"></i>
          </button>
        </div>
        <input type="text" value="<%= query.id %>" id="findDataByBookingId" class="form-control" placeholder="รหัสการจอง/เลขที่จอง">
        <button class="btn bg-gradient-primary" id="findDataByBookingIdBtn">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </div>
    </div>
    <div class="col-auto">
      <div class="my-1">
        <button class="btn  bg-gradient-primary font-weight-bold " id="getRentalDataAll">
          ทั้งหมด
        </button>
      </div>
    </div>
  </div>
</div>
<script src="/js/admin/reserve/validatePaidiOverTotal.js"></script>
<script src="/js/admin/reserve/getFindByRentalType.js"></script>
<script src="/js/admin/reserve/bookingModalBtn.js"></script>
<script src="/js/admin/reserve/getRoomDataById.js"></script>
<script src="/js/admin/reserve/getRoomDataById.js"></script>
<script src="/js/admin/reserve/currentTime.js"></script>

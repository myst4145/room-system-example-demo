<div class="modal fade" id="promotionModal">
  <div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header bg-gradient-primary align-items-center">
        <h5 class="modal-title">เพิ่มการชำระเงิน</h5>
        <button type="button" class="ac-btn ac-close-modal" data-bs-dismiss="modal">
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label>ชื่อโปรโมชั่น</label>
          <input type="text" class="form-control" maxlength="300" id="promotionName" placeholder="ป้อนชื่อโปรโมชั่น">
          <p class="empty-validate" id="validate-promotionName"></p>
        </div>
        <div class="form-group">
          <label>จำนวน</label>
          <input type="number" class="form-control" id="amount" placeholder="ป้อนชื่อโปรโมชั่น">
          <p class="empty-validate" id="validate-amount"></p>
        </div>
        <div class="row">
          <div class="col-md-6 col-lg-3">
            <div class="form-group">
              <label>วันที่เริ่มต้นใช้งาน</label>
              <input type="date" class="form-control" id="dateStart">
              <p class="empty-validate" id="validate-dateStart"></p>
            </div>
          </div>
          <div class="col-md-6 col-lg-3">
            <div class="form-group">
              <label>วันสิ้นสุดการใช้งาน</label>
              <input type="date" class="form-control" id="dateEnd">
              <p class="empty-validate" id="validate-dateEnd"></p>
            </div>
          </div>
        </div>

        <label for="">รูปแบบ</label>
        <div class="d-flex">
          <div class="custom-control custom-radio m-1">
            <input class="custom-control-input" type="radio" value="percent" id="percent" name="promotiontype">
            <label for="percent" class="custom-control-label">แบบเปอร์เช็น</label>
          </div>
          <div class="custom-control custom-radio m-1">
            <input class="custom-control-input" type="radio" value="currency" id="currency" name="promotiontype">
            <label for="currency" class="custom-control-label">แบบจำนวน</label>
          </div>
        </div>
        <p class="empty-validate" id="validate-promotiontype"></p>
        <section id="roomNumberGroup"></section>
        <p class="empty-validate" id="validate-roomNumber"></p>
      </div>
      <div class="modal-footer">
        <button class="btn btn-sm bg-gradient-success" id="promotionSubmit">
          <span class="font-weight-bold">บันทึก</span>
        </button>
      </div>
    </div>
  </div>
</div>
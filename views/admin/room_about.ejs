<link rel="stylesheet" href="/css/room_about.css">
<div class="text-right my-1 p-2">
  <button class="btn bg-gradient-success rounded-0" name="open-roomabout-modal" data-act="add">
    <i class="fa-solid fa-plus"></i>
    <span class="ml-1 font-weight-bold">เพิ่ม</span>
  </button>
</div>

<h5 class="font-weight-bold"> ข้อมูลเริ่มต้น </h5>


<div style="height: 35vh;overflow-y: scroll;">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th style="width:5% ;" class="text-center">ลำดับ</th>
          <th class="text-center" style="width:10% ;">รูปภาพประกอบ</th>
          <th style="width:10% ;">ห้องพัก</th>
          <th style="width:35% ;">คำอธิบาย</th>
          <th class="text-center" style="width:10% ;"></th>
          <th class="text-center" style="width:10% ;">ปิด - เปิด</th>
        </tr>
      </thead>
      <tbody>
        <% let idx = 1 %>
        <%  for(let i =0;i<entries[0].length;i++) { %>
        <tr>
          <td class="text-center"> <%= idx++ %> </td>
          <td class="text-center">
            <% if(entries[0][i].img !=''){ %>
            <img src="/src/img/room_about/<%= entries[0][i].img  %>" style="height: 3rem ;object-fit: contain;" class="room-about-img">
            <% } %>
          </td>
          <td><%= entries[0][i].title %>
          </td>
          <td><%= entries[0][i].descript %></td>
          <td class="align-middle">
            <button class="btn btn-sm bg-gradient-primary" name="open-roomabout-modal" data-act="edit" data-id="<%= entries[0][i].id %>">
              <i class="fa-solid fa-pen"></i>
              <span class="font-weight-bold ml-1">แก้ไข</span>
            </button>
          </td>
          <td class="text-center">
            <%  const status = entries[0][i].status=='on' ? 'checked' :'' %>
            <div class="custom-control custom-switch">
              <input type="checkbox" value="<%= entries[0][i].id %>" class="custom-control-input switch-status" <%- status  %> id="<%= entries[0][i].id %>">
              <label class="custom-control-label" for="<%= entries[0][i].id %>"></label>
            </div>
          </td>
        </tr>
        <% } %>

      </tbody>
    </table>
  </div>
</div>





<h5 class="font-weight-bold"> เพิ่มข้อมูล </h5>
<div style="height: 35vh;overflow-y: scroll;">
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th style="width:5% ;" class="text-center">ลำดับ</th>
          <th class="text-center" style="width:10% ;">รูปภาพประกอบ</th>
          <th style="width:55% ;">ชื่อ</th>
          <th class="text-center" style="width:15% ;"></th>
          <th class="text-center" style="width:10% ;">ปิด - เปิด</th>
        </tr>
      </thead>
      <tbody>
        <% if (entries[1]==0) { %>
        <tr>
          <td class="text-center" colspan="6">ไม่มีข้อมูล</td>
        </tr>
        <% } %>
        <% let idx_1 = 1 %>
        <%  for(let i =0;i<entries[1].length;i++) { %>
        <tr>
          <td class="text-center"> <%= idx_1++ %> </td>
          <td class="text-center">
            <% if(entries[1][i].img !=''){ %>
            <img src="/src/img/room_about/<%= entries[1][i].img  %>" style="height: 3rem ;object-fit: contain;" class="room-about-img">
            <% } %>
          </td>
          <td> <%= entries[1][i].title %> </td>
          <td>
            <button class="btn btn-sm bg-gradient-primary" name="open-roomabout-modal" data-act="edit" data-id="<%= entries[1][i].id %>">
              <i class="fa-solid fa-pen"></i>
              <span class="font-weight-bold ml-1">แก้ไข</span>
            </button>
            <button class="btn btn-sm btn-light bg-gradient-secondary" name="about-delete" data-id="<%= entries[1][i].id %>">
              <span class="font-weight-bold ml-1">ลบ</span>
            </button>
          </td>
          <td class="text-center">
            <%  const status = entries[1][i].status=='on' ? 'checked' :'' %>
            <div class="custom-control custom-switch">
              <input type="checkbox" value="<%= entries[1][i].id %>" class="custom-control-input switch-status" <%- status  %> id="<%= entries[1][i].id %>">
              <label class="custom-control-label" for="<%= entries[1][i].id %>"></label>
            </div>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<%- include ('room_about_modal') %>

<!DOCTYPE html>
<html lang="en">


<head>
  <%- include('head') %>
  <link rel="stylesheet" href="/css/web/home.css">
</head>

<body class="bg-light">
  <%- include('navbar') %>
  <section class="bg-primary">
    <div class="container">
      <div class="row justify-content-between align-items-center h-100">
        <div class="col-md-6">
          <div class="p-5 text-center">
            <% if(data.logo.length ==1) { %>
            <section>
              <div>
                <strong class="h-3 text-center text-light">
                  <%=  data.logo[0].title  %>
                </strong>
              </div>
              <% if(data.logo[0].logo_file !=''){ %>
              <img src="/src/img/logo/<%= data.logo[0].logo_file  %>" style="width: 100px;height: 100px;object-fit: contain;">
              <% } %>
            </section>
            <% } %>
            <div class="d-flex justify-content-center">
              <div class="p-3 text-light">
                <p>
                  <span class="fs-1">+</span>
                  <span class="fs-1"><%=  booking_count %></span>
                </p>
                <p>เข้าพัก</p>
              </div>
              <div class="p-3 text-light">
                <p>
                  <span class="fs-1">+</span>
                  <span class="fs-1"><%=  room_count %></span>
                </p>
                <p>ห้องพัก</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="container">





    <div class="row justify-content-center">
      <div class="col-md-8">
        <div id="carouselSlide" class="carousel slide m-2" data-bs-ride="true">
          <div class="carousel-indicators">
            <% for(let i = 0;i<slide.length;i++){ %>
            <% if(i==0){ %>
            <button type="button" data-bs-target="#carouselSlide" data-bs-slide-to="<%= i  %>" class="active" aria-current="true" aria-label="Slide <%= i+1  %>"></button>
            <% }else if(i > 0) { %>
            <button type="button" data-bs-target="#carouselSlide" data-bs-slide-to="<%= i  %>" aria-label="Slide <%= i+1  %>"></button>
            <%  } %>
            <% } %>

          </div>
          <div class="carousel-inner">
            <%   for (let i = 0; i < slide.length; i++) { %>
            <% const displayDescript = slide[i].descript_status=='on' ? 'style="display:block;"' : 'style="display:none"'  %>
            <% const displayTitle = slide[i].title_status=='on' ? 'style="display:block;"' : 'style="display:none"'  %>

            <%  if (i == 0) { %>
            <div class="carousel-item active">
              <img src="/src/img/slide/<%= slide[i].src  %>" class="d-block w-100 carousel-img " style="width: 12rem;object-fit: contain;">
              <div class="carousel-caption d-md-block">
                <h3 class="carousel-title" <%- displayTitle %>>
                  <%= slide[i].title   %>
                  </h5>
                  <p <%- displayDescript  %>>
                    <%=  slide[i].descript%>
                    </h5>
              </div>
            </div>
            <%  } else if (i != 0) { %>
            <div class="carousel-item">
              <img src="/src/img/slide/<%= slide[i].src  %>" class="d-block w-100 carousel-img ">
              <div class="carousel-caption d-md-block">
                <h5 class="carousel-title" <%- displayTitle %>>
                  <%= slide[i].title   %>
                </h5>
                <h5 <%- displayDescript  %>>
                  <%= slide[i].descript%></h5>
              </div>
            </div>
            <%     } %>
            <%   } %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselSlide" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselSlide" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
          </button>
        </div>
      </div>
    </div>



    <% if(room_about.length >0) { %>
    <div class="my-2">
      <h1 class="text-center p-2" style="font-size: 3rem;">รูปแบบห้องพักของเรา</h1>
      <div class="text-end p-2 my-1">
        <a href="/about/room/other" class="btn btn-dark bg-gradient fw-bold">เพิ่มเติม</a>
      </div>
      <div class="row g-3  justify-content-center">
        <% for(let i =0;i<room_about.length;i++) { %>
        <div class="col-md-4 col-lg-3 ">
          <div class="card border-0  w-100 h-100 bg-white  shadow-sm bg-gradient" style="width: 18rem;">
            <% if(room_about[i].img !=''){ %>
            <img src="/src/img/room_about/<%= room_about[i].img %>" class="card-img-top">
            <% } %>
            <div class="card-body">
              <h5 class="card-title fw-bold"> <%= room_about[i].title %></h5>
              <p class="card-text"><%= room_about[i].descript %></p>
            </div>
          </div>
        </div>
        <%  } %>
      </div>
    </div>
    <% } %>


    <% if(promotion.length >0) { %>
      <div class="my-2">
        <h1 class="text-center p-2" style="font-size: 3rem;">โปรโมชั่นสุดคุ้ม</h1>
        <div class="row g-3  justify-content-center">
          <% for(let i =0;i<promotion.length;i++) { %>
          <div class="col-md-6 col-lg-3 ">
            <div class="card border-0  w-100 h-100   shadow-sm bg-gradient" style="width: 18rem;">
              <div class="card-body">
                <h4 class="text-teal"><%= promotion[i].promotion_name %></h4>
                <p class="fw-bold"><%= promotion[i].discount_time_in %></p>
                <p class="fw-bold badge bg-gradient bg-teal p-2"><%= promotion[i].discount_txt %></p>
              </div>
            </div>
          </div>
          <%  } %>
        </div>
      </div>
      <% } %>
  

    <section class="my-4">
      <% if(rooms.length >0) {  %>
      <div class="text-end">
        <a href="/room" class="btn btn-dark bg-gradient fw-bold">เพิ่มเติม</a>
      </div>
      <h1 style="font-size: 3rem;"> ลดราคาพิเศษ </h1>

      <div class="row g-3">
        <% for(let i =0 ;i< rooms.length;i++ ){%>
        <div class="col-md-6 col-lg-4 col-xl-2">
          <div class="card">
            <img src="/src/img/example_room/<%= rooms[i].example_room.split(',')[0] %>" class="card-img-top" style="object-fit: cover;">
            <div class="card-body border-0">
              <p class="text-end">
                <span class="badge bg-warning text-dark">
                  <%= rooms[i].promotion.discount_txt %>
                </span>
              </p>
              <p><%= rooms[i].promotion.discount_time_in %></p>
              <p class="m-0"><%= rooms[i].rental_type_display %></p>
              <h5 class="card-title m-0">ห้อง <%= rooms[i].room_number  %></h5>
              <div class="m-0 text-end">
                <p class="m-0">
                  <span>ราคา</span>
                  <span><%=rooms[i].price_format %></span>
                </p>
                <% if(rooms[i].is_promotion ==true) { %>
                <p class="<%=  rooms[i].discount_display %> ms-1">
                  <span>เหลือเพียง</span>
                  <%=rooms[i].new_price %>
                </p>
                <%  } %>

              </div>
            </div>
            <div class="card-footer text-center border-top-0 bg-transparent">

              <% const link = `/room/${btoa(rooms[i].room_id)}/${btoa(rooms[i].room_number_id)}?n=${rooms[i].room_number}` %>
              <a href="<%= link %>" class="btn btn-primary bg-gradient w-100 fw-bold" target="_blank">
                ดูรายละเอียด
              </a>
            </div>
          </div>
        </div>



        <% } %>
      </div>

  </div>
  <% } %>
  </div>
  <%- include ('footer') %>
</body>

</html>